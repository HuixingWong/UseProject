<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.huixing.definview.TomatoView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clockView"/>

    <TextView
        android:id="@+id/tv_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="48dp"
        />

    <Button
        android:id="@+id/to_circle_btn"
        android:text="圆形进度条抽取"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
            android:layout_below="@+id/to_circle_btn"
            android:id="@+id/to_point_line"
            android:text="圆形进度条抽取"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <Button
            android:id="@+id/tosurface"
            android:text="tosurface"
            android:layout_below="@id/to_point_line"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

</RelativeLayout>